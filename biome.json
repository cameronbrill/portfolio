{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      ".prettierrc.js",
      ".yarn/*",
      "vitest.config.mts"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "all": true,
        "useNamingConvention": {
          "level": "error",
          "options": {
            "strictCase": false
          }
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      "src/setupTests.ts"
    ],
    "indentStyle": "space"
  },
  "overrides": [
    {
      "include": [
        "**/layout.tsx",
        "**/page.tsx"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "include": [
        "**/*.scss.d.ts"
      ],
      "linter": {
        "rules": {
          "nursery": {
            "all": true,
            "useFilenamingConvention": "off"
          }
        }
      }
    },
    {
      "include": [
        "**/*.test.ts*"
      ],
      "linter": {
        "rules": {
          "nursery": {
            "all": true,
            "useImportRestrictions": "off"
          }
        }
      }
    }
  ]
}